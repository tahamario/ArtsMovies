<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>
            <main id="main">

                <section>
                    <h1>
                        <%= title %>
                    </h1>

                    <form action="/article-edit" method="POST">

                        <input type="hidden" name="id" value="<%= article._id %>" />

                        <label for="title">Article title:</label>
                        <input type="text" id="title" name="title" value="<%= article.title %>" required>


                        <label for="summary">Article summary:</label>
                        <input type="text" id="summary" name="summary" value="<%= article.summary %>" required>



                        <label for="body">Article body:</label>
                        <textarea id="body" name="body" required><%= article.body %></textarea>


                        <button class="create" style="background-color: #4CAF50;
                        border: 1px solid #000;">Update</button>
                    </form>
                </section>

            </main>
            <%- include('../partials/footer.ejs') %>
    </body>

</html>